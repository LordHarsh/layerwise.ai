{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python",
      "maxDuration": 60,
      "memory": 512,
      "includeFiles": "api/**/*.py",
      "excludeFiles": "{node_modules,api/venv,**/__pycache__,*.pyc,*.pyo,.git,.next,out,build,coverage,.vercel,resources,tests}/**"
    }
  },
  "rewrites": [
    {
      "source": "/py-api/:path*",
      "destination": "/api/index/:path*"
    }
  ]
}
